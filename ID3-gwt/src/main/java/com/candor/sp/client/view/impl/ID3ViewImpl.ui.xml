<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .body {
        font-family: Arial;
        color: white;
        }
        /* Split the screen in half */
        .split {
        height: 100%;
        width: 50%;
        position: fixed;
        z-index: 1;
        top: 0;
        overflow-x: auto;
        padding-top: 20px;
        }

        /* Split the screen in half */
        .split-vertical {
        height: 50%;
        width: 50%;
        position: fixed;
        z-index: 1;
        left: 0;
        overflow-x: auto;
        padding-left: 20px;
        }

        /* Control the left side */
        .left {
        left: 0;
        background-color: #bdcebe;
        }

        /* Control the right side */
        .right {
        right: 0;
        }

        /* Control the right side */
        .top {
        top: 0;
        }

        /* Control the right side */
        .bottom {
        bottom: 0;
        background-color: white;
        }


        /* If you want the content centered horizontally and vertically */
        .centered {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        }


        /* Style the image inside the centered container, if needed */
        .centered img {
        width: 150px;
        border-radius: 50%;
        }

        .tree-position{
        margin-top: 3%;
        }

        .tree-label{
        margin-left: 2%;
        font-size: xx-large;
        font-family: monospace;
        }

        .paper-button {
        border-style: outset;
        }
        .paper-button:hover {
        background-color: #97a498;
        }
        .paper-button:active {
        background-color: #97a498;
        border-style: insert !important;
        }

        .id3-paper-input{
        width:20% !important;
        margin: 2%;
        }

    </ui:style>
